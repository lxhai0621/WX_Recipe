/* pages/my/my.wxss */
.avatar {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.name {
  margin: 10px auto;
}
.gap1 {
  width: 100%;
  height: 10px;
  background-color: rgba(207, 203, 203, 0.3);
  margin-bottom: 30px;
}

.pic1 {
  display: inline-block;
  vertical-align: middle;
  width: 25px;
  height: 25px;
  margin: 1px 20px;
}
.pic2 {
  display: inline-block;
  vertical-align: middle;
  width: 16px;
  height: 16px;
  margin-left: 160px;
}
view text {
  vertical-align: middle;
  font-weight: lighter;
}
.gap2 {
  margin-bottom: 20px;
}

.block {
  width: 100vw;
  height: 240px;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.wrapper {
  margin: 32rpx;
  display: block;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: rgba(0, 0, 0, .6);
}

.btn--confirm {
  color: #0052d9;
}
.touxiang {
  width: 50px;
  height: 50px;
}