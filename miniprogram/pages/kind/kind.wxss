.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:60rpx;
  background-color:whitesmoke;
  margin-top: 15rpx;
  border:2px solid #7fa8ec;
}

.searchinput
{
  width: 100%; 
  text-align:center;
  border:solid 2px #7fa8ec;
}
.searchimage
{ 
  width:50rpx;
  height:50rpx;
}
.confirmimage
{
  width: 70rpx;
  height: 50rpx;
}
.kindarea{
  height: 350rpx;
  border:solid 3px #1684fc;
  margin-top: 15rpx;
}
.recipearea{
  display: flex;
  flex-wrap: wrap;
}
.recipelabel image{
  width: 300rpx;
  height: 230rpx;
  padding-left: 0rpx;
  padding-top: 20rpx;
}
.recipelabel{
  margin-top: 50rpx;
  margin-left: 20rpx;
  border: 1px solid #e4e4e4;
  width: 340rpx;
  height: 330rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  text-align: center;
}
.recipelabel .recipecontent{
  margin-top: 15rpx;
  font-size: 35rpx;
  padding-left: 15rpx;
}
.nav-left{
  display: inline-block;  
  width: 30%;  
  height: 100%;  
  background:rgba(240, 242, 246, 1);  
  text-align: left;
}
.nav-left-item{
  display: flex;
  align-items: center;
  background: rgba(240, 242, 246, 1);
  height: 100rpx;   
  border-bottom: 1rpx solid #fdfcfc; 
} 
.nav-left-item-txt {
  margin-left: 40rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 70rpx;   
  padding: 16rpx;     
  font-size: 32rpx; 
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.L-item-active{  
  border-left: 6rpx solid rgba(255,94,9,1);
  background: rgb(255, 255, 255);
} 
.L-i-txt-active {
  color: rgba(255, 94, 9, 1);
}
.nav-right {  
  display: inline-block;  
  width: 70%;  
  height: 100%;  
  background: rgba(255, 255, 255, 1);  
  text-align: left; 
} 
.nav-right-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  height: 100rpx;   
  border-bottom: 1rpx solid rgba(240,242,246,1);
}
.nav-right-item-txt {
  width: 300rpx;
  margin-left: 40rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 70rpx;   
  padding: 16rpx;     
  font-size: 32rpx; 
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.item-select {
  display: flex;
  width: 60rpx;
  height: 50rpx;
}
.image-select {
  width: 60rpx;
  height: 50rpx;
  margin-left: 50rpx;
}