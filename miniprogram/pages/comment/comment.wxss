.placeholder-view{
  width: 750rpx;
  height: 80rpx;
}
.commentPublish{
  position: fixed;
  bottom: 0rpx;
  display: flex;
  align-items: center;   /*纵轴*/
  justify-content: center; /*横轴*/
  z-index: 999;
  width: 750rpx;
  font-size: 28rpx;
  height: 80rpx;
  background-color: #ffffff;
  padding-left: 10rpx;
}
.answer-input{
  padding-left: 20rpx;
  width:740rpx ;
}
.publishButton{
  color: #2C6BCD;
}
.comment {
  margin-bottom: 10px;
}
.nickname {
  vertical-align: middle;
}
.avatar {
  padding: 0px 5px;
}
.msg_box {
  width: 78%;
  height: 50px;
  border: 1px solid black;
  margin-bottom: 80rpx;
  margin-left: 80rpx;
}
.msg {
  width: 100%;
  height: 50px;
  border: 1px solid black;
  overflow-wrap: break-word;
  text-indent: 2em;
  line-height: 1.5em;
  overflow:auto;
}
.del {
  width: 40rpx;
  height: 40rpx;
  padding-left: 20px;
  float: right;
  margin-right: 75rpx;
  margin-top: 15rpx;
}